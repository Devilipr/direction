		Page<Vjhrkmx> page = VjhrkmxService.findPage(new Page<Vjhrkmx>(request, response), vjhrkmx); 
		model.addAttribute("page", page);
		return "modules/liuxxt/vjhrkmxList";
	}
	@RequiresPermissions("Vjhrkmx:Vjhrkmx:view")
