	@ModelAttribute
	public Vjhrkmx get(@RequestParam(required=false) String id) {
		Vjhrkmx entity = null;
		if (StringUtils.isNotBlank(id)){
			entity = VjhrkmxService.get(id);
		}
		if (entity == null){
			entity = new Vjhrkmx();
		}
		return entity;
	}
	@RequiresPermissions("vjhrkmx:vjhrkmx:view")
